<p style="color: green"><%= notice %></p>

<% content_for :title, "Tweets" %>
<%= form_with(url: tweets_path, method: :get, local: true) do %>
  <%= text_field_tag :search, params[:search], placeholder: "Buscar Tweets" %>
  <%= submit_tag "Buscar", class: "btn btn-secondary" %>
<% end %>
<h1>Tweets</h1>

<div id="tweets">
  <% @tweets.each do |tweet| %>
    <%= render tweet %>
    <p>
      <%= link_to "Show this tweet", tweet %>
    </p>
  <% end %>
</div>

